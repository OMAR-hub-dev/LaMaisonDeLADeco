{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block content %}
<div class="block bg-light-grey">
    
    
<div class="row py-5 ">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 ">
        {% for message in app.flashes('notice') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}
    <form method="post" class="container">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}
            <h1 class='text-center text-star'>Merci de vous connecter</h1>
            <label class='text-center text-star' for="inputEmail">Votre email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="filtre text-dark" autocomplete="email" required autofocus>
            <label class='text-center text-star' for="inputPassword">Votre mot de password</label>
            <input type="password" name="password" id="inputPassword" class="filtre text-dark" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn w-75 " type="submit">
                Se connecter
            </button>
            <hr>
                <p class="text-center my-4 text-decoration-none"> <a href="{{ path('reset_password') }}"> Mot de passe oublié </a></p>
                <p class="text-center my-4 text-decoration-none">Ou souhaitez-vous <a href="{{ path('register') }}"> créer un compte ? </a></p> 
        </div>
        <div class="col-sm-3"></div>
</div>
        
        
    </form>
</div>
{% endblock %}
