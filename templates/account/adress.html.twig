{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}
<h1>Mes adresses</h1><hr>
    <a href="{{ path('account_adress_add') }}" class=" btn btn-info btn-sm float-right ">Ajouter une adresse</a><br>
    <a href="{{ path('account') }}">Retour</a>
    <hr>
        {% if app.user.adresses|length == 0 %}
           <p class="text-center"> Vous n'avez pas encore ajoutÃ© d'adresse dans votre compte client. Pour en ajouter une, veuillez <a href="{{ path('account_adress_add') }}">cliquer ici </a> </p> 
        {% else %}
            <div class="row">
               {% for adress in app.user.adresses %}
               <div class="col-md-4">
                  <div class="card" style="width: 18rem;">
                     <div class="card-body">
                        <h5 class="card-title">{{ adress.name }}</h5>
                        <p class="card-text">
                        {{ adress.address }} <br>
                           {{ adress.postal }} - {{ adress.city }} - {{ adress.contry }}
                        </p>
                        <a href="{{ path('account_adress_edit',{'id': adress.id }) }}" class=""> Modifier </a>  | <a href="{{ path('account_adress_delete', { 'id': adress.id }) }}" class=""> supprimer</a>
                     </div>
                  </div>
               </div>
               {% endfor %}   
            </div>
        {% endif %}
{% endblock %}