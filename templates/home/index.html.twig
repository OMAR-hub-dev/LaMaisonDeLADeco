      {# --------- end session best product ------------------- #}


       {# -----------session catalague------------------- #}
        <section class = "catalog bg-brown" id = "catalog">
          <div class = "catalog-content grid text-center">
            <div class = "catalog-left "></div>
            <div class = "catalog-right text-white flex py">
                <div class = "section-title">
                    <h2>Des idées qui vont vous redonner des couleurs</h2>
                </div>
                <p class = "text">Des centaines d’articles pour s’inspirer, découvrir notre actualité et trouver les bonnes idées pour aménager sa maison avec style et selon ses envies</p>
                <p class = "text "></p>
            </div>
          </div>
        </section>
       {# -----------end session catalague------------------- #}

      {# --------------- feedback section ------------ #}
      <section class = "feedback py bg-light-grey-color-shade" id = "feedback">
      <div class = "contenaire">
          <div class = "section-title py-5 text-center">
              <h2 class='first-title' >Le Mag'</h2>
              <p class = "lead ">Tous les conseils qu’il vous faut pour que votre décoration fasse la une !</p>
              <div class = "line"></div>
          </div>

          <div class = "feedback-inner">
              <div class = "feedback-container grid">
                  <div class = "feedback-item bg-white text-center" data-id = "1">
                      <img src = "{{ asset('asset/images/quote-icon-dark.png') }}" class = "quote-icon">
                      <p class = "text text-grey">Une cuisine fonctionnelle, c’est bien.  nous avons réuni 10 bonnes idées déco. Et si vous veniez piocher dedans pour créer votre cuisine design ?</p>
                      <div class = "client">
                          <img src = "{{ asset('asset/images/client-1.jpg') }}">
                      </div>
                  </div>

                  <div class = "feedback-item bg-white text-center" data-id = "2" id = "feedback-display">
                      <img src = "{{ asset('asset/images/quote-icon.png') }}" class = "quote-icon">
                      <p class = "text text-grey">Quand il s’agit de créer un univers cosy et poétique pour la chambre de bébé, il ne faut pas passer à côté des incontournables déco</p>
                      <div class = "client">
                          <img src = "{{ asset('asset/images/client-2.jpg') }}">
                      </div>
                  </div>

                  <div class = "feedback-item bg-white text-center" data-id = "3">
                      <img src = "{{ asset('asset/images/quote-icon-dark.png') }}" class = "quote-icon">
                      <p class = "text text-grey">Noël prépare déjà son grand retour ! Chaque année, les 24 et 25 décembre sont une bonne occasion de sortir les bougies et décorations de nos placards.</p>
                      <div class = "client">
                          <img src = "{{ asset('asset/images/client-3.jpg') }}">
                      </div>
                  </div>
              </div>
          </div>
          <div class = "feedback-btns flex">
              <button class = "feedback-btn feedback-active-btn"></button>
              <button class = "feedback-btn"></button>
              <button class = "feedback-btn"></button>
          </div>
      </div>
  </section>
  <!-- end of feedback section -->

  <!-- newsletter section -->
