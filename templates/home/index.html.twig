                  <a href = "{{ path('products') }}" class = "btn-header text-white bg-brown">Achetez maintenant</a>
              </div>

              <div class = "header-right">
                  <img src = "{{ asset('asset/images/header-sofa-img.png') }}">
              </div>
              <img src = "{{ asset('asset/images/header-shape.png') }}" class = "header-shape">
          </div>
