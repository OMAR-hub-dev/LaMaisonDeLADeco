{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block content %}
<h1 class='text-center text-star my-5'>Mon panier</h1>
     
    {% if cart|length >0 %}
<table class="table">
    <thead>
        <tr>
       
        <th scope="col">Produits</th>
        <th scope="col"></th>
        <th scope="col">Quantit√©</th>
        <th scope="col">Prix</th>
        <th scope="col">Total</th>
        <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {% set total = null %}
        {% for product in cart %}
        <tr class="">
        <th><img src="/uploads/produits/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="50px" width="50px"></th>
        <td>
            {{ product.product.name }} <br>
            <small>{{ product.product.subtitle }}</small>
        </td>
        <td>
            <a href="{{ path('add_to_cart',{'id': product.product.id }) }}"><img src="{{ asset('asset/images/add.png') }}" height="20px" alt="Ajouter un produit"></a>
                x {{ product.quantity }}
            <a href="{{ path('deduct_to_cart',{'id': product.product.id }) }}"><img src="{{ asset('asset/images/bouton-moins.png') }}" height="20px" alt="Retirer un produit"></a>
        </td>
        <td>{{ (product.product.price /100)|number_format(2, ',', '.') }}</td>
        <td>{{ ((product.product.price * product.quantity) /100)|number_format(2, ',', '.') }}</td>
        <td><a href="{{ path('delete_to_cart',{'id': product.product.id }) }}"><img src="{{ asset('asset/images/bin.png') }}" alt="Supprimer mon produit"></a></td>
        
        </tr>
        {% set total = total +(product.product.price * product.quantity) %}
    {% endfor %}
    </tbody>
</table>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panier float-right  my-5">
                <b>Nombre de produit : </b> {{ cart|length }} </br>
                <b>Total de mon panier : </b> {{ (total /100)|number_format(2, ',', '.') }} </br> 
                <a href="{{ path('order') }}" class="mb-3 btn btn-success btn-block">Valider mon panier</a>
            </div>
        </div>
    </div>
    {% else %}
    <hr>
        <p class='text-center text-brown my-5'><b>Votre panier est vide</b></p>


    {% endif %}


{% endblock %}
