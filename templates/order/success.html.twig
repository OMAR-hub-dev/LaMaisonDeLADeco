{% extends "base.html.twig" %}

{% block title %}
    confirmation de la commande
{% endblock %}

{% block content %}
<section>
    <div class="row bg-light-brown py-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
                <h2 class='text-center text-star'>Confirmation de commande</h2>
                <p class=''>
                    Bonjour {{ payé.user.firstName }} {{ payé.user.lastName }} </br>
                    Nous vous remercions de votre commande n°{{ payé.reference }} </br>
                    une confirmation vient de vous etre envoyé à l'adress {{ payé.user.email }}
                </p>
        </div>
        <div class="col-md-3"></div>
    </div>

</section>  
{% endblock %}