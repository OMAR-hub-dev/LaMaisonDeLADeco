{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - La Boutique du sport{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-5">
        <img src="/uploads/produits/{{ product.illustration }}" alt="{{ product.name }}"class="img-fluid">
    </div>
    <div class="col-md-7 my-auto ">
        <h3>{{ product.name }}</h3>
        <div class="border border-light">
            <p>{{ product.subtitle }}</p><hr>
            <p>{{ (product.price /100)|number_format(2, ',', '.') }}</p><hr>
            <p class="">{{ product.description }}</p>
        </div>
        <a href="{{ path('add_to_cart', {'id':product.id} ) }}" class="btn btn-primary my-3">Ajouter au panier</a>
    </div><hr>

    <h2>nos meilleurs ventes</h2>
    {% for product in best %}
    <div class="col-md-3">
       
      {% include 'product/single_product.html.twig' %}

    </div>
  {% endfor %}
</div> 
{% endblock %}
